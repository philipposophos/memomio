<div class="container">
  <div class="form">
    <h1><%= @memory.title %></h1>

    <hr>
    <%= simple_form_for [@memory, @tag] do |f| %>
      <%= f.association :emotional_tag, collection: @emotional_tags.map { |tag| [tag["emotion"], tag["id"]] },
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
