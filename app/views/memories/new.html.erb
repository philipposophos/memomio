<div class="container">
  <div class="form">
    <h2>Create a new memory</h2>

    <hr>

    <%= simple_form_for @memory, data: { controller: 'flatpickr' } do |f| %>
      <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "memoryDate" } } %>

      <%= f.input :title %>

      <%= f.input :description, as: :text %>

      <%= f.button :submit %>
    <% end %>
  </div>
</div>
