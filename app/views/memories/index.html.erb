<div class="search-bar" style="margin-top: 5%; margin-bottom: 5%; text-align: center;">
  <form class="search-box">
  <%= form_with url: memories_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      placeholder: "Find a memory",
      autocomplete: "off"
    %>
    <button type="reset"></button>
    </form>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="memories">
        <% @memories.each do |memory| %>
          <h4><%= memory.title %></h4>
          <p><%= memory.description %></p>
        <% end %>
      </div>
      <%= form_with model: @memory do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :date %>
        <%= f.text_field :date %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :description %>
        <%= f.number_field :description %>
        <%= f.label :created_at %>
        <%= f.text_field :created_at %>
        <%= f.label :updated_at %>
        <%= f.text_field :updated_at %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
